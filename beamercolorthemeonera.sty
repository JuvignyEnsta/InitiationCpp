\mode<presentation>

% Settings
	% Page de titre
\setbeamercolor*{title page header}{fg=onera}
\setbeamercolor*{subtitle}{fg=onera_gray}
\setbeamercolor*{author}{fg=onera_gray}
\setbeamercolor*{date}{fg=onera_gray}
\setbeamercolor*{institute}{fg=onera_gray}

	% Titre des diapositives
\setbeamercolor*{frametitle}{fg=onera}
\setbeamercolor*{framesubtitle}{fg=onera_gray}
	% Listes
\setbeamercolor*{item}{fg=onera}
	% Bibliographie
\setbeamercolor*{bibliography item}{fg=citecolor} % Couleur de la référence [1], [2], .... dans la biblio
\setbeamercolor*{bibliography entry author}{fg=black} % Couleur des auteurs
\setbeamercolor*{bibliography entry title}{fg=onera_gray}
\setbeamercolor*{bibliography entry location}{fg=black} 
\setbeamercolor*{bibliography entry note}{fg=black}

\mode<all>
